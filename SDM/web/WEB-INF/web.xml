<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadProductsServlet</servlet-name>
        <servlet-class>servlets.regionStores.LoadProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadStoresServlet</servlet-name>
        <servlet-class>servlets.regionStores.LoadStoresServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadStoreProductsServlet</servlet-name>
        <servlet-class>servlets.regionStores.LoadStoreProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoggedUserServlet</servlet-name>
        <servlet-class>utilities.LoggedUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUsersInfoServlet</servlet-name>
        <servlet-class>servlets.LoadUsersInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadRegionsInfoServlet</servlet-name>
        <servlet-class>servlets.LoadRegionsInfoServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginShortResponse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadProductsServlet</servlet-name>
        <url-pattern>/pages/regionStores/loadProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadStoresServlet</servlet-name>
        <url-pattern>/pages/regionStores/loadStores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadStoreProductsServlet</servlet-name>
        <url-pattern>/pages/regionStores/loadStoreProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoggedUserServlet</servlet-name>
        <url-pattern>/pages/regionStores/loggedUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoggedUserServlet</servlet-name>
        <url-pattern>/pages/dashboard/loggedUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUsersInfoServlet</servlet-name>
        <url-pattern>/pages/dashboard/users/loadUsersInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadRegionsInfoServlet</servlet-name>
        <url-pattern>/pages/dashboard/stores/loadRegionsInfo</url-pattern>
    </servlet-mapping>
</web-app>