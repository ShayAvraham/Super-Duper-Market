                  <Insets left="10.0" />
               </GridPane.margin>
            </Button>
            <Label prefHeight="21.0" prefWidth="178.0" text="Choose Update Option" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <ComboBox fx:id="updateOptionComboBox" onAction="#onUpdateOptionSelected" prefHeight="31.0" prefWidth="214.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
